pipeline {
  agent any

  stages {
  
    stage('Check Node.js Version') {
      steps {
        sh 'node -v'
        sh 'npm -v'
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }

    stage('Run Unit Tests') {
      steps {
        sh 'npm test'
      }
    }

    stage('Build Application') {
      steps {
        sh 'npm run build-dev'
      }
    }
  }

  post {
    success {
      echo "ğŸ‰ Build and tests successful!"
    }
    failure {
      echo "âŒ Build failed! Check logs for errors."
    }
  }
}
